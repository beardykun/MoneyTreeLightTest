<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/accountsFragment">

    <fragment
        android:id="@+id/accountsFragment"
        android:name="com.example.moneytreelighttest.accounts.AccountsFragment"
        android:label="fragment_accounts"
        tools:layout="@layout/fragment_accounts">
        <action
            android:id="@+id/action_accountsFragment_to_transactionsFragment"
            app:destination="@id/transactionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.example.moneytreelighttest.transactions.TransactionsFragment"
        android:label="TransactionsFragment">
        <argument
            android:name="account"
            app:argType="com.example.moneytreelighttest.model.Account"
            app:nullable="false" />
    </fragment>
</navigation>